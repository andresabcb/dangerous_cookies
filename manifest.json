{
  "description": "Firefox cookies security plugin",
  "manifest_version": 2,
  "name": "DangerousCookies",
  "version": "1.0",

  "browser_action": {
    "browser_style": true,
    "default_icon": "img/cookies.png",
    "default_title": "Dangerous Cookies Plugin",
    "default_popup": "dangerouscookies.html"
  },

  "permissions": [
    "cookies",
    "<all_urls>",
    "tabs", 
    "storage", 
    "http://*/*", 
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["plugin.js"]
    }
  ]
}